{
  "kind": "singleType",
  "collectionName": "contact_infos",
  "info": {
    "singularName": "contact-info",
    "pluralName": "contact-infos",
    "displayName": "Contact Info",
    "description": "Контактная информация компании"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "string",
      "required": true
    },
    "latitude": {
      "type": "decimal",
      "required": false,
      "args": [10, 7]
    },
    "longitude": {
      "type": "decimal",
      "required": false,
      "args": [10, 7]
    },
    "socialLinks": {
      "type": "component",
      "repeatable": true,
      "component": "shared.social-link"
    },
    "serviceOptions": {
      "type": "component",
      "repeatable": true,
      "component": "shared.service-option"
    }
  }
}
